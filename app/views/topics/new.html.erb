<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Picture</h1>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :タイトル %>
            <%= f.text_field :title, class: 'title-field'%>
          </div>
        
          <div class="form-group">
            <%= f.label :画像 %>
            <%= f.file_field :image, :multiple => true %>
          </div>

          <div class="form-group">
            <%= f.label :記事本文 %>
            <%= f.text_area :contents, class: 'contents_field' %>
          </div>
          <% if logged_in? %>
            <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
          <% end %>

        <% end %>
      </div>
    </div>
  </div>
</div>
